<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>psbbussinessparks</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
  <servlet>  
<servlet-name>RegistrationServlet</servlet-name>  
<servlet-class>com.bcj.psbbussinessparks.controller.RegistrationController</servlet-class>  
<init-param>  
<param-name>name</param-name>  
<param-value>sridhar</param-value>  
</init-param>  
  
</servlet>  
<servlet-mapping>  
<servlet-name>RegistrationServlet</servlet-name>  
<url-pattern>/RegistrationServlet</url-pattern>  
</servlet-mapping>  

 <servlet>  
<servlet-name>LoginServlet</servlet-name>  
<servlet-class> com.bcj.psbbussinessparks.controller.LoginServlet</servlet-class>  
</servlet>  
  
<servlet-mapping>  
<servlet-name>LoginServlet</servlet-name>  
<url-pattern>/LoginServlet</url-pattern>  
</servlet-mapping>  

<servlet>  
<servlet-name>PaymentServlet</servlet-name>  
<servlet-class>com.bcj.psbbussinessparks.controller.PaymentServlet</servlet-class>  
</servlet>  
  
<servlet-mapping>  
<servlet-name>PaymentServlet</servlet-name>  
<url-pattern>/PaymentServlet</url-pattern>  
</servlet-mapping>  
 <security-constraint>
<web-resource-collection>
<web-resource-name>resource1</web-resource-name>
<url-pattern>/RegistrationServlet</url-pattern>
<http-method>
POST</http-method>
</web-resource-collection>
<auth-constraint>
<role-name>
customer</role-name></auth-constraint>
</security-constraint>
<login-config>
<auth-method>
Basic</auth-method></login-config>



</web-app>